{
	"include": ["parcel-transformer-lezer/index.js"],
	"compilerOptions": {
		"rootDir": "parcel-transformer-lezer",

        "noEmit": true,

		"lib": ["ES2022"],
		"target": "ES2022",

		"module": "nodenext",
		"moduleResolution": "nodenext",

		"allowJs": true,
		"checkJs": true,

		"strict": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"typeRoots": ["./node_modules/@types"]
	}
}
